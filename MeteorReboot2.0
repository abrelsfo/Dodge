def intersect(square1):
    global img, multiplier, multi_count, line_count, lines_up, drop_speed, drop_bool
    
    if abs(square1[0]-square[0]) < 18 and abs(square1[1]-square[1]) < 18:
        if square1[2] == 1:
            drop_bool = True
            drop_speed = 7
            return 1
        elif square1[2] == 2:
            multi_count += 500
            
            if multiplier == 1:
                multiplier += 1    
            else:
                multiplier += 2
            return 1
        elif square1[2] == 3:        
            line_count = 0
            lines_up = True
            return 1
        else:
            return 2
    return 0    
 
def drop():
    global img, squares, lines_up, score
    
    c = randint(0,1025)
    
    fill = 1    #1 is hollow -1 is filled

    #Determines type of block to fall
    if c%50 == 0:   #Speed up
        typ = 1
        color = (0,0,255)
        fill = -1
        
    elif c%30 == 0: #2x Points
        typ = 2
        color = (255,255,255)
        
    elif c%20 == 0: #Lines
        typ = 3
        color = (232,236,61)
        
    else: #Normal
        typ = 0
        color = (255,0,255)
        
    cv2.rectangle(img,(c-6,0),(c+6,12),color,fill)
    if lines_up == True:
        cv2.line(img, (c-6,0),(square[0], square[1]),(color[0],color[1],color[2]))
    squares.append([c,6,typ, color, fill])
    
def fall():
    global img, squares, square, score, multiplier

    x = square[0]
    y = square[1]
    count = 0
    cv2.rectangle(img,(x-12,y-12),(x+12,y+12),(0,255,0),-1)
    
    for i in xrange(len(squares)):
        i = i-count
        x = squares[i][0]
        y = squares[i][1]
        r = intersect(squares[i])

        if r == 2:
            highscores()
            
            cv2.imshow('image',img)
            k = cv2.waitKey(0)
            while k in [2490368, 2424832, 2621440, 2555904]:
                k = cv2.waitKey(0)
            return True
        elif r == 1 or y >= 906:
            count += 1
            score += (1*multiplier)
            del squares[i]
            
        else:
            squares[i][1] += drop_speed + int(score/100)
            color = squares[i][3]
            fill = squares[i][4]
            cv2.rectangle(img,(x-6, y-4),(x+6,y+8),color,fill)
            if lines_up:
                cv2.line(img, (x,y),(square[0], square[1]),(color[0],color[1],color[2]))

    return False

def move_left():
    global img, square, score, speed
    
    x = square[0]-8-(score/100)
    y = square[1]
    if x < 8:
        return
    cv2.rectangle(img,(x-12,y-12),(x+12,y+12),(0,255,0),-1)
    square = (x,y)

def move_right():
    global img, square, score, speed
    
    x = square[0]+8+(score/100)
    y = square[1]
    if x > 1016:
        return
    
    cv2.rectangle(img,(x-12,y-12),(x+12,y+12),(0,255,0),-1)
    square = (x,y)

def bonus():
    global img, multiplier, multi_count, line_count, lines_up, drop_count, drop_speed, score, drop_bool
    
    if multiplier != 1:
        cv2.rectangle(img,(0,30),(40,40),(255,255,255),-1)
        multi_count -= 1
        if multi_count%500 == 0:
            multiplier -= 2
            multi_count = 0
            
        if multiplier < 1:
            multiplier = 1
    if lines_up:
        cv2.rectangle(img,(50,30),(90,40),(232,236,61),-1)
        line_count += 1
        if line_count >= 750:
            lines_up = False

    if drop_bool:
        drop_speed = 7
        cv2.rectangle(img,(100,30),(140,40),(0,0,255),-1)
        drop_count += 1
        if drop_count >= 500:
            drop_bool = False
            drop_count = 0
            drop_speed = 5

def get_user():
    global user
    
    k = 0
    s = 'User: '
    while k != 13: 
        cv2.rectangle(img,(0,0),(1024,1024),(0,0,0),-1)
        cv2.putText(img,s,(420,256), cv2.FONT_HERSHEY_SIMPLEX, 1, (255,255,255))
        cv2.imshow('image',img)
        k = cv2.waitKey(0)
        if k == 8:
            user = user[:-1]
        elif k != 13 and k != 32:
            user += chr(k)
        s = 'User: ' + user
            
def start():
    global img, squares, square, score, multiplier, multi_count, line_count, lines_up, drop_speed, drop_count, user, drop_bool

    squares = []
    square = (512,888)
    score = 0
    multiplier = 1
    multi_count = 0
    line_count = 0
    lines_up = False
    drop_speed = 5
    drop_count = 0
    drop_bool = False
    up = 2490368
    left = 2424832
    down = 2621440
    right = 2555904
    frequency = 0
    if user == '':
        get_user()
    
    cv2.namedWindow('image')
    cv2.rectangle(img,(0,0),(1024,1024),(0,0,0),-1)
    cv2.rectangle(img,(500,876),(524,900),(0,255,0),-1)
    cv2.putText(img,'Score: 0',(0,24), cv2.FONT_HERSHEY_SIMPLEX, 1, (255,255,255))

    while 1:

        cv2.imshow('image',img)
        k = cv2.waitKey(1)
        txt = 'Score: ' + str(score)
        cv2.rectangle(img,(0,0),(1024,1024),(0,0,0),-1)
        cv2.putText(img,txt,(0,24), cv2.FONT_HERSHEY_SIMPLEX, 1, (255,255,255))
        bonus()
        if fall():
            break
        
        if not frequency:
            drop()
        elif frequency >= (5-int(score/500)):
            frequency = -1
        
        if k == left:
            move_left()
        elif k == right:
            move_right()
        elif k == 27:
            break
        frequency += 1

    return

def main():
    while 1:
        
        cv2.namedWindow('image')
        cv2.rectangle(img,(0,0),(1024,1024),(0,0,0),-1)
        cv2.putText(img,'Start(y/n)',(435,430), cv2.FONT_HERSHEY_SIMPLEX, 1, (255,255,255))
        cv2.imshow('image',img)
        k = cv2.waitKey(0)
        if k == ord('y'):
            
            start()
        elif k == ord('n'):
            cv2.destroyAllWindows()
            sys.exit(1)

if __name__ == "__main__":
    main()
