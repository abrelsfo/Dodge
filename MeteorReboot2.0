from collections import *
from filelock import FileLock
from random import randint
import numpy as np
import cv2
import sys
import time
import os

user = ''
squares = []
square = (512,1012)
score = 0
multiplier = 1
multi_count = 0
line_count = 0
lines_up = False
drop_speed = 5
drop_count = 0
drop_bool = False
img = np.zeros((900,1024,3), np.uint8)

